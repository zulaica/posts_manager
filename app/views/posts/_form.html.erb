<%= render "layouts/errors", :object => @post %>

<%= form_for @post, :html => { :class => "form-horizontal" } do |f| %>
  <div class="form-group">
    <%= f.label :title, :class => "col-md-1 col-md-offset-1 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :title, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :entry, :class => "col-md-1 col-md-offset-1 control-label" %>
    <div class="col-md-8">
      <%= f.text_area :entry, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= f.submit :class => "btn btn-default" %>
    </div>
  </div>
<% end %>
